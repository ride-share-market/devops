{
  "network": {
    "servers": ["logstash.ridesharemarket.com:9876"],
    "ssl certificate": "<%= @ssl_certificate %>",
    "ssl key": "<%= @ssl_key %>",
    "ssl ca": "<%= @ssl_certificate %>",
    "timeout": 15
  },
  "files": [
    {
      "paths": [
        "/host/var/log/auth.log"
      ],
      "fields": {"type": "auth", "host": "<%= @fqdn %>"}
    },
    {
      "paths": [
        "/host/var/log/syslog"
      ],
      "fields": {"type": "syslog", "host": "<%= @fqdn %>"}
    },
    {
      "paths": [
        "/host/var/log/mail.log"
      ],
      "fields": {"type": "mail", "host": "<%= @fqdn %>"}
    },
    {
      "paths": [
        "/host/var/log/unattended-upgrades/unattended-upgrades.log"
      ],
      "fields": {"type": "unattended-upgrades", "host": "<%= @fqdn %>"}
    }
  ]
}
